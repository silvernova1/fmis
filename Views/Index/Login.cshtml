@model fmis.ViewModel.IndexViewModel


@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_IndexLogin.cshtml";
}


<div class="login-logo">
    <center>
        <img src="~/assets/images/DOHLOGO.png" style="width: 25%" /><br>
        <label>INDEX OF PAYMENT</label>
    </center>
</div>
<!-- /.login-logo -->
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Sign in to start your session</p>

        <form method="post" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="input-group mb-3">
                <input type="text" asp-for="Username" class="form-control" placeholder="User ID">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <input type="checkbox" asp-for="RememberMe" id="remember">
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
            <div class="text-danger text-sm" asp-validation-summary="All"></div>
        </form>
    </div>
    <!-- /.login-card-body -->
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
