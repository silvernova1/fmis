@model fmis.Models.Accounting.Deduction;

<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>

<button type="button" style="margin-right:15px; margin-top: 10px;" class="close" data-dismiss="modal">×</button>
<center><h3 class="grey lighter smaller">Create Deduction</h3></center>
<hr />

<div class="container">
    <div class="col-md-6">
        <form asp-action="Create"  >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5>Deduction Description: </h5>
                <input asp-for="DeductionDescription" id="description" class="form-control" required/>
                <span asp-validation-for="DeductionDescription" class="text-danger"></span>
            </div>
            <div class="form-group pull-right">
                <input type="submit"  onclick="submiBtnClick()" class="btn btn-success btn-sm"  
                /> 
                <a class="btn btn-sm btn-default" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function submiBtnClick() {
        var deducDescription = document.getElementById("description").value;
        if (deducDescription != '') {
            Lobibox.notify('success', {
                msg: 'Deduction Successfully Added!',
            });
        }
        else {
            return false;
        }
    }
</script>