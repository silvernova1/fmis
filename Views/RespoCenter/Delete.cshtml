@model fmis.Models.RespoCenter


<br />
<center>
    <h4>Are you sure you want to delete this?</h4>
</center>
<div class="container">
    <div class="col-md-6">
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Respo Name </th>
                    <th scope="col">Respo Code</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.Respo)</td>
                    <td>@Html.DisplayFor(model => model.RespoCode)</td>
                </tr>
            </tbody>
        </table>

        <center>
            <form asp-action="Delete">
                <input type="hidden" asp-for="RespoId" />
                <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> |
                <a data-dismiss="modal" class="btn btn-default btn-sm" >Back to List</a>
                <hr />
            </form>
        </center>
    </div>
</div>