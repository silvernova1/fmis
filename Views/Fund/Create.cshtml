@model fmis.Models.Fund

<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>

<button type="button" style="margin-right:15px; margin-top: 10px;" class="close" data-dismiss="modal">×</button>
<center><h3 class="grey lighter smaller">Create FundSource</h3></center>
<hr />
<div class="container">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5>Fund Source Description: </h5>
                <input asp-for="Fund_description" id="fund_description" class="form-control" />
                <span asp-validation-for="Fund_description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Fund Code (Current): </h5>
                <input asp-for="Fund_code_current" id="fund_current" class="form-control" />
                <span asp-validation-for="Fund_code_current" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Fund Code (Conap): </h5>
                <input asp-for="Fund_code_conap" class="form-control" />
                <span asp-validation-for="Fund_code_conap" id="fund_conap" class="text-danger"></span>
            </div>
            <div class="form-group pull-right">
                <input type="submit" value="Create" class="btn btn-success btn-xs" onclick="submiBtnClick()" />  <a class="btn btn-xs btn-default" data-dismiss="modal">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function submiBtnClick() {

        var fund_description = document.getElementById("fund_description").value;
        var fund_current = document.getElementById("fund_current").value;
        var fund_conap = document.getElementById("fund_conap").value;

        if (fund_description != '' && fund_current != '' && fund_conap != '') {
            Lobibox.notify('success', {
                msg: 'Fund Code Successfully Added!',
            });
        }
        else {
            return false;
        }
    }
</script>