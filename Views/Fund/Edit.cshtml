@model fmis.Models.Fund

<center><h3 class="grey lighter smaller">Edit Fund Source </h3></center>
<hr />
<div class="container">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FundId" />
            <div class="form-group">
                <h5>Fund Source Description: </h5>
                <input asp-for="Fund_description" id="fund_description" class="form-control" />
                <span asp-validation-for="Fund_description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Fund Code (Current): </h5>
                <input asp-for="Fund_code_current" id="fund_current" class="form-control" />
                <span asp-validation-for="Fund_code_current" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Fund Code (Conap): </h5>
                <input asp-for="Fund_code_conap" id="fund_conap" class="form-control" />
                <span asp-validation-for="Fund_code_conap" class="text-danger"></span>
            </div>
            <div class="form-group pull-right">
                <input type="submit" value="Save" onclick="editBtnClick()" class="btn btn-success btn-xs" /> <a class="btn btn-default btn-xs" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>

    function editBtnClick() {

        var fund_description = document.getElementById("fund_description").value;
        var fund_current = document.getElementById("fund_current").value;
        var fund_conap = document.getElementById("fund_conap").value;

        if (fund_description != '' && fund_current != '' && fund_conap != '' ) {
            Lobibox.notify('info', {
                msg: 'Fund Code Successfully Edited!',
            });
        }
        else {
            return false;
        }
    }
</script>