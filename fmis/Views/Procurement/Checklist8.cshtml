@model fmis.Models.Procurement.PuChecklist
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Procurement" + " " + "(Checklist8)";
}


<h3 class="grey lighter smaller">
    P.U Checklist #1
</h3>
<hr>
<div class="background-wrapper">
    <div class="card-container">

            <div class="row">
            <form asp-controller="Procurement" asp-action="SaveChecklist">
                <input type="hidden" asp-for="ChecklistNo" value="8" />
                <div class="col-md-12">
                    <center>
                        <div class="rectangle">
                            <h2>P.U CHECKLIST #8</h2>
                        </div>
                        <h5 style="font-weight:bold">
                            PURCHASE REQUEST (PR) FOR <br />
                            DRUGS AND MEDICINES
                        </h5>
                        <h6>
                            PR NO. :
                            <select asp-for="Prno" asp-items="ViewBag.PrId" class="form-control pr" style="width: 200px;">
                                <option value="">Select Pr</option>
                            </select>
                        </h6>
                        <h6>
                            DATE : <input type="date" asp-for="PuChecklistDate" class="text-input-container" style="width: 200px;" />
                        </h6>
                        <div class="rectangle">
                            <h6 style="font-weight:bold">
                                SUPPORTING DOCUMENTS/DETAILS
                            </h6>
                        </div>
                    </center>

                    <div class="form-group">
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[0].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[0].Description" value="Complete signatures incl. approval" />
                            Complete signatures incl. approval
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[1].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[1].Description" value="Complete with PR # and date" />
                            Complete with PR # and date
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[2].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[2].Description" value="Estimated unit cost & correct total cost" />
                            Estimated unit cost & correct total cost
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[3].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[3].Description" value="Purpose of Request" />
                            Purpose of Request
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[4].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[4].Description" value="Funding Source" />
                            Funding Source
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[5].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[5].Description" value="With stamp and signature of the Therapeutic Committee" />
                            With stamp and signature of the Therapeutic Committee
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[6].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[6].Description" value="Specify - Meals and Accommodation" />
                            Complete description of item including unit, form, strength, size <br />
                            &nbsp; &nbsp; &nbsp; &nbsp; (for bottle or container) & quantity per container, bottle or strip
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[7].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[7].Description" value="Check-in and Check-out time" />
                            NO BRAND NAME
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[6].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[6].Description" value="Specify - Meals and Accommodation" />
                            Must be fresh commercial stock with a total shelf life of 24  <br />
                            &nbsp; &nbsp; &nbsp; &nbsp;  months from the date of manufacture facture but not less  <br />
                            &nbsp; &nbsp; &nbsp; &nbsp;  than 18 months from the date of delivery
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[8].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[8].Description" value="Specify - Meals only" />
                            For supplier to submit valid License to Operate <br />
                            &nbsp; &nbsp; &nbsp; &nbsp; (LTO) as Wholesaler, Manufacturer or Distributor
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[8].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[8].Description" value="Specify - Meals only" />
                            For supplier to submit valid Certificate of Good <br />
                            &nbsp; &nbsp; &nbsp; &nbsp; Manufacturing Practice (CGMP)
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[10].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[10].Description" value="Specify - Venue and Meals only" />
                            For supplier to submit EDPMS Certificate of Compliance
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[11].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[11].Description" value="Specify - Accommodation only" />
                            For supplier to submit the result of Drug Analysis from FDA
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[12].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[12].Description" value="Room Sharing" />
                            20% Retention shall be deducted pending FDA <br />
                            &nbsp; &nbsp; &nbsp; &nbsp; "PASSED" Result of Analysis
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[13].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[13].Description" value="Specify - Venue only" />
                            Labelling instruction
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[14].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[14].Description" value="Location of venue/hotel/office" />
                            Preferred delivery period, if applicable
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[15].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[15].Description" value="Classification of hotel/venue" />
                            Approved Allocation or Distribution List
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[16].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[16].Description" value="Function room preference" />
                            Approved Realignment, if applicable
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[17].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[17].Description" value="Funding source" />
                            Approved WFP/Supplemental WFP
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[18].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[18].Description" value="Specify others ameneties, if applicable" />
                            Approved PPMP/Supplemental PPMP
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[26].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[26].Description" value="Others" />
                            Others <br />
                            &nbsp; &nbsp; &nbsp; &nbsp;  <input type="text" asp-for="PrChecklist[26].Others" style="border: none; border-bottom: 1px solid black;" />
                        </p>
                        <br />
                        <p style="font-weight:bold">
                            REMARKS:
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[27].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[27].Description" value="COMPLETE" />
                            COMPLETE
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[28].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[28].Description" value="Please comply with item(s) marked X on or before" />
                            Please comply with item(s) marked <br />
                            &nbsp; &nbsp; &nbsp; &nbsp; X on or before <input type="text" asp-for="PrChecklist[28].Others" style="border: none; border-bottom: 1px solid black;" />
                        </p>
                        <br />
                        <br />
                        <p style="font-family:'Times New Roman'; font-style:italic; font-size: 10pt">
                            CHECKED/REVIEWED BY:
                        </p>
                        <br />
                        <br />
                        <center>
                            <p class="underline">
                                STEFANIE LORRAINE D. TRINIDAD
                            </p>
                            <p style="font-size:8pt; font-style:italic">
                                Printed name, Signature and Date
                            </p>
                            <button type="submit" class="bnt btn-primary" style="float: right;">Submit</button>
                        </center>

                    </div>

                </div>
            </form>
            </div>
    </div>
</div>

<br />
<div class="alert" style="width: 550px; display: none;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <span id="alert-message"></span>
</div>

<script>
    $(document).ready(function () {
        $('.pr').select2();

        $('form').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("SaveChecklist", "Procurement")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (result) {
                    if (result.success) {
                        Lobibox.notify('success', {
                            title: 'Success',
                            msg: 'Submitted to End User..',
                            sound: false
                        });
                    } else {
                        Lobibox.notify('error', {
                            title: 'Error',
                            msg: 'Error submitting the form..',
                            sound: false
                        });
                    }
                    $('form')[0].reset();
                    $('.pr').val('').trigger('change');
                },
                error: function () {
                }
            });
        });
    });
</script>



