@model List<fmis.Models.Procurement.RmopAta>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Procurement" + " " + "(AgencyToAgency)";
}

<style>

    .card-container {
        width: calc(70% - 10px);
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        background-color: #fff;
        margin-left: 50px;
    }

    @@media (max-width: 1024px) {
        .card-container {
            width: calc(80% - 40px);
        }
    }

    @@media (max-width: 767px) {
        .background-wrapper {
            min-height: 100vh;
        }

        .card-container {
            width: 90%;
        }
    }



    .rectangle h2 {
        white-space: nowrap;
        margin-top: 5px;
        margin-bottom: 5px;
    }

    .rectangle h6 {
        white-space: nowrap;
    }

    .rectangle {
        border: 1px solid black;
        padding-left: 100px;
        padding-right: 100px;
        margin-top: 10px;
        margin-bottom: 10px;
        width: fit-content;
        display: inline-block;
    }

    .TimesNewRoman {
        font-family:'Times New Roman';
        margin: 0;
        padding: 0;
    }



    .grid-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
       
    }

    .grid-item {
        padding: 5px;
        text-align: center;
        margin-top: 20px;
    }

    .logo-container {
        float: left;
    }

    .logo-image {
        max-width: 100px;
    }



</style>
<h3 class="grey lighter smaller">
    RMOP AGENCY TO AGENCY 
</h3>
<hr>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 card-container">
            <form>
                <div class="logo-container">
                    <img src="~/assets/images/doh_logo_updated.png" alt="Logo" style="margin-left:160px" class="logo-image" />
                </div>
                <center>
                    <div style="margin-right: 300px;">
                        <p class="TimesNewRoman">Republic of the Philippines</p>
                        <p class="TimesNewRoman">Department Of Health </p>
                        <h4 class="TimesNewRoman" style="font-weight:bold">CENTRAL VISAYAS CENTER for HEALTH DEVELOPMENT</i></h4>
                        <br />
                        <br />
                        <h5 class="TimesNewRoman" style="font-weight:bold">
                            BAC RESOLUTION NO.
                            <b id="bacNo" data-type="select">______ </b>
                            <input type="hidden" name="BacNo" id="BacNoHidden" />
                            -AMP s.  2023
                        </h5>
                    </div>
                    <br />
                    <h5 class="TimesNewRoman" style="font-weight:bold">
                        “RECOMMENDING THE USE OF ALTERNATIVE MODE OF PROCUREMENT:<br />
                        NEGOTIATED PROCUREMENT (AGENCY TO AGENCY) UNDER SEC. 53.5 OF <br />
                        THE REVISED IMPLEMENTING RULES AND REGULATIONS OF RA 9184.”
                        __________________________________________________________________________________
                    </h5>
                    <br />
                </center>
                <div style="text-align: justify;">
                    <h5 style="margin-left:300px;" class="TimesNewRoman"><b>WHEREAS,</b> pursuant to Sec. 48.2, in relation to Sec. 10 of the IRR, as a general rule, the </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> Procuring Entity shall adopt competitive bidding as the general method of procurement and that alternative </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> methods of procurement shall be resorted to only in highly exceptional cases provided for in the rules; </h5>
                    <br />
                    <h5 style="margin-left:300px;" class="TimesNewRoman"> <b>WHEREAS,</b> Sec. 53, in relation to Sec. 53.5, of the IRR provides that Negotiated Procurement </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> is a method of procurement of Goods, Infrastructure Projects and Consulting services, whereby the Procuring </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> Entity directly negotiates a contract with a technically, legally, and financially capable supplier, contractor, or </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> consultant in instances such as in <b>AGENCY TO AGENCY</b> wherein Procurement of Goods, Infrastructure </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> Projects and Consulting Services is contracted with another agency of the GoP, such as the PS-DBM, which </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> is tasked with a centralized procurement of Common-Use Supplies for the GoP in accordance with Letters of </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> Instruction No. 755 and E.O. 359, s. 1989; </h5>
                    <br />
                    <h5 style="margin-left:300px;" class="TimesNewRoman">
                        <b>WHEREAS,</b> corollary thereto, Purchase Request No.
                        <b id="prNoOne" data-type="select">______ </b>
                        <input type="hidden" name="PrNoOne" id="PrNoOneHidden" />
                        for the Procurement of
                    </h5>
                    <input type="text" name="PrDescriptionOne" style="border: none; border-bottom: 1px solid black; text-align: center; margin-left: 245px; width: 640px; font-family: 'Times New Roman'; font-size: 14px;">
                    @*<h5 style="margin-left:245px;" class="TimesNewRoman"> <span >___________________________________________________________________________________ </span></h5>*@
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> in the amount of PHP <input type="text" style="border: none; border-bottom: 1px solid black; width: 80px;" name="PrAmountOne"> was referred to the Bids and Awards Committee for processing; </h5>
                    <br />
                    <h5 style="margin-left:300px;" class="TimesNewRoman"> <b>WHEREAS,</b> after evaluation of the purchase request vis-à-vis the implementing rules and upon  </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> confirmation of the existence of the conditions allowing the same, the BAC has come to a resolution that  </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> resort to the Alternative Mode of Procurement: Negotiated Procurement (Agency to Agency) under Sec. 53.5  </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> of the IRR would be most advantageous to the government and is essentially the most applicable recourse </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> given the availing circumstances;   </h5>
                    <br />
                    <h5 style="margin-left:300px;" class="TimesNewRoman"> <b>WHEREAS,</b> the BAC shall contract the foregoing procurement with the <input type="text" style="border: none; border-bottom: 1px solid black; width: 30px;" name="AgencyBefore">(Agency) <input type="text" style="border: none; border-bottom: 1px solid black; width: 30px;" name="AgencyAfter">; </h5>
                    <br />
                    <h5 style="margin-left:300px;" class="TimesNewRoman"> <b>NOW THEREFORE,</b> above premises considered, resolved as it is hereby resolved, to </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> recommend the use of the Alternative Mode of Procurement: Negotiated Procurement (Agency to Agency) </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> under Sec. 53.5 of the Revised Implementing  Rules and Regulations of the Republic Act No. 9184 for </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman">
                        Purchase Request No.
                        <b id="prNoTwo" data-type="select">______ </b>
                        <input type="hidden" name="PrNoTwo" id="PrNoTwoHidden" />
                        , in the amount of PHP <input type="text" style="border: none; border-bottom: 1px solid black; width: 100px;" name="PrAmountTwo"> for the  Procurement of
                    </h5>
                    <h5 style="margin-left:245px;" class="TimesNewRoman"> <input type="text" style="border: none; border-bottom: 1px solid black; width: 640px;" name="PrDescriptionTwo"> </h5>
                    @*<h5 style="margin-left:245px;" class="TimesNewRoman"> ________________________________________________________________________________. </h5>*@
                    <br />
                    <h5 style="margin-left:320px;" class="TimesNewRoman"> <input type="text" style="border: none; border-bottom: 1px solid black; width: 120px;" name="PrDate"> 2023 , Cebu City, Philippines. </h5>
                    <br />
                    <br />
                </div>
                <div class="grid-container">
                    <div class="grid-item" style="margin-left:150px;">
                        <h5 class="TimesNewRoman" style="font-weight:bold"> DR. ANESSA PATINDOL</h5>
                        <p class="TimesNewRoman">Provisional Member</p>
                    </div>
                    <div class="grid-item">
                        <h5 class="TimesNewRoman" style="font-weight:bold">DR. VAN PHILLIP BATON</h5>
                        <p class="TimesNewRoman">Provisional Member</p>
                    </div>
                    <div class="grid-item" style="margin-right:150px;">
                        <h5 class="TimesNewRoman" style="font-weight:bold">MR. RAMIL R. ABREA</h5>
                        <p class="TimesNewRoman">Member</p>
                    </div>

                    <div class="grid-item" style="margin-left:150px;">
                        <h5 class="TimesNewRoman" style="font-weight:bold">MR. ROLDAN A. CUBILLO</h5>
                        <p class="TimesNewRoman">Member (DOH Union Rep)</p>
                    </div>

                    <div class="grid-item">
                        <h5 class="TimesNewRoman" style="font-weight:bold">ATTY. JO DAVID Z. BORCES</h5>
                        <p class="TimesNewRoman">Member</p>
                        <br />
                        <br />
                        <br />
                        <h5 class="TimesNewRoman" style="font-weight:bold">DR. JONATHAN NEIL V. ERASMO</h5>
                        <p class="TimesNewRoman">Chairperson</p>
                        <br />
                        <br />
                        <h5 class="TimesNewRoman" style="margin-right:300px;">Approved:</h5>
                        <br />
                        <h5 class="TimesNewRoman" style="font-weight:bold">JAIME S. BERNADAS, MD, MGM, CESO III</h5>
                        <p class="TimesNewRoman">Director IV</p>
                    </div>

                    <div class="grid-item" style="margin-right:150px;">
                        <h5 class="TimesNewRoman" style="font-weight:bold">DR. SOPHIA M. MANCAO</h5>
                        <p class="TimesNewRoman">Vice-Chairperson</p>
                    </div>
                </div>
                <br />
                <div class="col-md-12 bg-light text-right">
                    <button type="submit" class="btn btn-xs btn-primary"> <i class="ace-icon fa fa-check-square-o"></i> Save</button>
                    <a class="btn btn-xs btn-success" target="_blank" href="@Url.Action("PrintAgencyToAgency","Procurement",new { id = "" })" data-bs-toggle="print" title="Print">
                        <i class="ace-icon fa fa-file-pdf-o"></i> Print to PDF
                    </a>

                </div>
            </form>
        </div>
        <div class="col-md-3">
            <div class="p-3">
                <table class="table table-striped" id="dataTable">
                    <thead>
                        <tr>
                            <th scope="col">Bac No</th>
                            <th scope="col">PR No</th>
                            <th scope="col">PR Amount</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>

                    <tbody>

                        @if (Model.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BacNo</td>
                                    <td>@item.PrNoOne</td>
                                    <td>@item.PrAmountOne.ToString("##,#00.00")</td>
                                    <td>
                                        <a class="btn btn-xs btn-success" target="_blank" href="@Url.Action("PrintAgencyToAgency","Procurement",new { id = @item.Id })" data-bs-toggle="print" title="Print">
                                            <i class="ace-icon fa fa-file-pdf-o"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">
                                    <div class="alert alert-danger">
                                        No data found.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>



<link href="https://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.1/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.1/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

<script>
    $(document).ready(function () {
        var sourceData = @Json.Serialize(ViewBag.BacResNo);
        var prData = @Json.Serialize(ViewBag.Pr);

        $('#dataTable').DataTable({
            searching: true,
            paging: true,
            pageLength: 10,
            ordering: false,
            lengthChange: false
        });

        // Initialize X-Editable
        $('#bacNo').editable({
            type: 'select',
            source: sourceData,
            title: 'Select Bac No',
            success: function (response, newValue) {
                $('#BacNoHidden').val(newValue);
            }
        });
        //Pr No 1
        $('#prNoOne').editable({
            type: 'select',
            source: prData,
            title: 'Select Pr No',
            success: function (response, newValue) {
                $('#PrNoOneHidden').val(newValue);
            }
        });
        //Pr No 2
        $('#prNoTwo').editable({
            type: 'select',
            source: prData,
            title: 'Select Pr No',
            success: function (response, newValue) {
                $('#PrNoTwoHidden').val(newValue);
            }
        });

        $('form').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("SavePrAta", "Procurement")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (result) {
                    //var form = $(this);
                    //var action = form.attr('action');
                    //var data = form.serialize();

                    if (result.success) {
                        Lobibox.notify('success', {
                            title: 'Success',
                            msg: 'RMOP AGENCY TO AGENCY saved successfully.'
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 2000);
                    } else {
                        Lobibox.notify('error', {
                            title: 'Error',
                            msg: 'Error submitting the form.'
                        });
                    }

                    $('form')[0].reset();
                    $('#BacNoHidden').val('');
                    $('#PrNoOneHidden').val('');
                    $('#PrNoTwoHidden').val('');
                },
                error: function () {
                }
            });
        });

    });
</script>




