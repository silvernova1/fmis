@model List<fmis.Models.Procurement.Canvass>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Procurement" + " " + "(Canvass)";
}


<style>
    .ui-datepicker {
        width: 250px !important;
    }
</style>

<h3 class="grey lighter smaller">
    CANVASS
</h3>
<hr>

<div class="col-xs-12">
    <div id="editModal" class="modal fade" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 class="smaller lighter blue no-margin">Update Canvass</h3>
                </div>
                <form>
                    <div class="modal-body">
                        <div>
                            <h4 class="grey lighter smaller">
                                Please complete the form.
                            </h4>
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">RPQ NO. </label>
                                        <input type="text" class="form-control" id="rpqNo" name="rpqNo" required>
                                    </div>
                                    <div class="form-group">
                                        <label style="font-weight:bold">RPQ DATE</label>
                                        <input type="text" class="form-control" id="rpqDate" name="rpqDate" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> ITEM/DESCRIPTION: </label>
                                        <input type="text" class="form-control" id="itemDesc" name="itemDesc" required>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Date" style="font-weight:bold"> PR NO.  </label>
                                        <input type="text" class="form-control" id="prNo" name="prNo">
                                    </div>
                                    <div class="form-group">
                                        <label style="font-weight:bold">PR DATE: </label>
                                        <input type="text" class="form-control" id="prDate" name="prDate">
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">RMOP</label>
                                        <input type="text" class="form-control" id="rmop" name="rmop" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-xs btn-primary" id="saveChanges">Update <span class="fa fa-check-square-o"></span> </button>
                        <a data-dismiss="modal" class="btn btn-xs btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<p>
	<a class="btn btn-success btn-sm" href="#my-modal" role="button" data-toggle="modal" >
        <i class="ace-icon fa fa-plus "></i>Create New
    </a>
</p>
<h1 style="margin-left : 200px; font-weight:bold;">2023 CANVASS LOG BOOK</h1>

<table class="table table-hover" style="width: 900px">
    <thead>
        <tr>
            <th>
                RPQ NO.
            </th>
            <th>
                RPQ DATE
            </th>
            <th>
                PR NO.
            </th>
            <th>
                PR DATE
            </th>
            <th>
                ITEMS/DESCRIPTIONS
            </th>
            <th>
                RMOP
            </th>
            <th>
                ACTIONS
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.RpqNo
                    </td>
                    <td>
                        @item.RpqDate.ToString("MMM d, yyyy")
                    </td>
                    <td>
                        @item.PrNo
                    </td>
                    <td>
                        @item.PrDate.ToString("MMM d, yyyy")
                    </td>
                    <td>
                        @item.ItemDesc
                    </td>
                    <td>
                        @item.Rmop
                    </td>
                    <td>
                        <a class="btn btn-xs btn-primary btn-edit" data-id="@item.Id">
                            <i class="ace-icon fa fa-edit"></i>Edit
                        </a>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">
                    <div class="alert alert-danger">
                        No data found.
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_AddCanvass")




<script>
    var itemId;
    $(document).ready(function () {
        $(".btn-edit").click(function () {
            itemId = $(this).data("id");

            $.ajax({
                type: "GET",
                url: '@Url.Action("GetCanvass", "Procurement")',
                data: { id: itemId },
                success: function (data) {

                    var rpqDate = new Date(data.rpqDate);
                    var formattedRpq = rpqDate.toLocaleDateString('en-US', {
                        month: 'short',
                        day: 'numeric',
                        year: 'numeric'
                    });
                    $("#rpqDate").val(formattedRpq);

                    var prDate = new Date(data.prDate);
                    var formattedPr = prDate.toLocaleDateString('en-US', {
                        month: 'short',
                        day: 'numeric',
                        year: 'numeric'
                    });
                    $("#prDate").val(formattedPr);

                    $("#rpqNo").val(data.rpqNo);
                    $("#prNo").val(data.prNo);
                    $("#itemDesc").val(data.itemDesc);
                    $("#rmop").val(data.rmop);
                    $("#editModal").modal("show");
                }
            });
        });

        $("#rpqDate").datepicker({
            dateFormat: "MM d, yy"

        });
        $("#prDate").datepicker({
            dateFormat: "MM d, yy"

        });

        $("#saveChanges").click(function (e) {
            e.preventDefault();
            var newData = {
                Id: itemId,
                RpqNo: $("#rpqNo").val(),
                RpqDate: $("#rpqDate").val(),
                PrNo: $("#prNo").val(),
                PrDate: $("#prDate").val(),
                ItemDesc: $("#itemDesc").val(),
                Rmop: $("#rmop").val()
            };

            $.ajax({
                type: "POST",
                url: '@Url.Action("UpdateCanvass", "Procurement")',
                data: JSON.stringify(newData),
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    if (result.success) {
                        Lobibox.notify('success', {
                            title: 'Success',
                            msg: 'Data saved successfully..',
                            sound: false
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 1500);
                    } else {
                        Lobibox.notify('error', {
                            title: 'Error',
                            msg: 'Error submitting the form..',
                            sound: false
                        });
                        setTimeout(function () {
                            $("#editModal").modal("hide");
                            location.reload();
                        }, 1000);
                    }
                }
            });
        });
    });
</script>



