                    <a class="btn btn-xs btn-primary btn-edit" onclick="openEditCanvassModal()">
                        <i class="ace-icon fa fa-edit"></i>Edit
                    </a>
                </td>

            </tr>
        
    </tbody>
</table>

<div class="col-xs-12">

	<div id="my-modal" class="modal fade" style="display: none;">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
					<h3 class="smaller lighter blue no-margin">Create Canvass</h3>
				</div>
                <form asp-action="Create" method="post">
				<div class="modal-body">
                    <div >
                        <h4 class="grey lighter smaller">
                            Please complete the form.
                        </h4>
                        <br />
                        
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">RPQ NO. </label>
                                        <input type="text" class="form-control" id="" name="" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">RPQ DATE </label>
                                        <input type="DATE" class="form-control" id="" name="" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> ITEM/DESCRIPTION: </label>
                                        <input type="text" class="form-control" id="" name="" required>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Date" style="font-weight:bold"> PR NO.  </label>
                                        <input type="text" class="form-control" id="Date" name="Date">
                                    </div>
                                    <div class="form-group">
                                        <label for="Date" style="font-weight:bold">PR DATE: </label>
                                        <input type="date" class="form-control" id="Date" name="Date">
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">RMOP</label>
                                        <input type="text" class="form-control" id="ContactNumber" name="" required>
                                    </div>
                                </div>
                            </div>
                    </div>
				</div>

				<div class="modal-footer">
                    <button type="submit" onclick="showNotification()" class="btn btn-xs btn-primary">Submit <span class="fa fa-check-square-o"></span> </button>
                    <a data-dismiss="modal" class="btn btn-xs btn-danger">Cancel</a>
				</div>
                </form>



      

			</div><!-- /.modal-content -->

		</div><!-- /.modal-dialog -->
	</div>

	<!-- PAGE CONTENT ENDS -->
</div>




<script>
    function openEditCanvassModal() {
        // Load the CanvassEdit content into the modal
        $.get("/Procurement/CanvassEdit", function (data) {
            $("#modalContentEdit").html(data);
            $("#EditModalCanvass").modal("show");
        });
    }
</script>



