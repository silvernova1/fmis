@model fmis.Models.Procurement.PuChecklist
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Procurement" + " " + "(Checklist1)";
}



<h3 class="grey lighter smaller">
    P.U Checklist #1
</h3>
<hr>
<div class="background-wrapper">
    <div class="card-container">

            <div class="row">
               <form asp-controller="Procurement" asp-action="SaveChecklist">
                   <input type="hidden" asp-for="ChecklistNo" value="1"/>
                <div class="col-md-12">
                    <center>
                        <div class="rectangle">
                            <h2>P.U CHECKLIST #1</h2>
                        </div>
                        <h5 style="font-weight:bold">
                            PURCHASE REQUEST (PR) FOR <br />
                            <u>
                                JOB ORDER FOR VENUE,<br />
                                MEALS, AND ACCOMMODATION
                            </u>
                        </h5>
                        <h6>PR NO. :
                            <select asp-for="Prno" asp-items="ViewBag.PrId" class="form-control pr" style="width: 200px;">
                                <option value="">Select Pr</option>
                            </select>
                        </h6>
                        <h6>
                            DATE : <input type="date" asp-for="PuChecklistDate" class="text-input-container" style="width: 200px;" />
                        </h6>
                        <div class="rectangle">
                            <h6 style="font-weight:bold">
                                SUPPORTING DOCUMENTS/DETAILS
                            </h6>
                        </div>
                    </center>

                    <div class="form-group">
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[0].IsChecked" class="form-check-input">
                            Complete signatures incl. approval
                            <input type="hidden" asp-for="PrChecklist[0].Description" value="Complete signatures incl. approval" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[1].IsChecked" class="form-check-input">
                            Complete with PR #, date, unit cost and correct total cost
                            <input type="hidden" asp-for="PrChecklist[1].Description" value="Complete with PR #, date, unit cost and correct total cost" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[2].IsChecked" class="form-check-input">
                            Title of Activity
                            <input type="hidden" asp-for="PrChecklist[2].Description" value="Title of Activity" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[3].IsChecked" class="form-check-input">
                            Meals and meal type
                            <input type="hidden" asp-for="PrChecklist[3].Description" value="Meals and meal type" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[4].IsChecked" class="form-check-input">
                            Number of EXPECTED pax
                            <input type="hidden" asp-for="PrChecklist[4].Description" value="Number of EXPECTED pax" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[5].IsChecked" class="form-check-input">
                            Number of GUARANTEED pax
                            <input type="hidden" asp-for="PrChecklist[5].Description" value="Number of GUARANTEED pax" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[6].IsChecked" class="form-check-input">
                            Date/Period of Activity
                            <input type="hidden" asp-for="PrChecklist[06].Description" value="Date/Period of Activity" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[7].IsChecked" class="form-check-input">
                            Specify - Meals and Accommodation
                            <input type="hidden" asp-for="PrChecklist[7].Description" value="Specify - Meals and Accommodation" />
                        </p>
                        <p style="margin-left:10px">
                            <input type="checkbox" asp-for="PrChecklist[8].IsChecked" class="form-check-input">
                            Check-in and Check-out time
                            <input type="hidden" asp-for="PrChecklist[8].Description" value="Check-in and Check-out time" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[9].IsChecked" class="form-check-input">
                            Specify - Meals only
                            <input type="hidden" asp-for="PrChecklist[9].Description" value="Specify - Meals only" />
                        </p>
                        <p style="margin-left:10px">
                            <input type="checkbox" asp-for="PrChecklist[10].IsChecked" class="form-check-input">
                            Preferred Menu, if desired
                            <input type="hidden" asp-for="PrChecklist[10].Description" value="Preferred Menu, if desired" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[11].IsChecked" class="form-check-input">
                            Specify - Venue and Meals only
                            <input type="hidden" asp-for="PrChecklist[11].Description" value="Specify - Venue and Meals only" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[12].IsChecked" class="form-check-input">
                            Specify - Accommodation only
                            <input type="hidden" asp-for="PrChecklist[12].Description" value="Specify - Accommodation only" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[13].IsChecked" class="form-check-input">
                            Room Sharing
                            <input type="hidden" asp-for="PrChecklist[13].Description" value="Room Sharing" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[14].IsChecked" class="form-check-input">
                            Specify - Venue only
                            <input type="hidden" asp-for="PrChecklist[14].Description" value="Specify - Venue only" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[15].IsChecked" class="form-check-input">
                            Location of venue/hotel/office
                            <input type="hidden" asp-for="PrChecklist[15].Description" value="Location of venue/hotel/office" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[16].IsChecked" class="form-check-input">
                            Classification of hotel/venue
                            <input type="hidden" asp-for="PrChecklist[16].Description" value="Classification of hotel/venue" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[17].IsChecked" class="form-check-input">
                            Function room preference
                            <input type="hidden" asp-for="PrChecklist[17].Description" value="Function room preference" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[18].IsChecked" class="form-check-input">
                            Funding source
                            <input type="hidden" asp-for="PrChecklist[18].Description" value="Funding source" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[19].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[19].Description" value="Specify others ameneties, if applicable" />
                            Specify others ameneties, if applicable <br />
                            &nbsp; &nbsp; &nbsp; &nbsp;  <input type="text" asp-for="PrChecklist[19].Others" style="border: none; border-bottom: 1px solid black;" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[20].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[20].Description" value="Others" />
                            Others <br />
                            &nbsp; &nbsp; &nbsp; &nbsp;  <input type="text" asp-for="PrChecklist[20].Others" style="border: none; border-bottom: 1px solid black;" />
                        </p>
                        <p style="font-weight:bold">
                            <input type="checkbox" asp-for="PrChecklist[21].IsChecked" class="form-check-input">
                            <u>CONCEPT NOTE (CN)</u>
                        </p>
                        <p style="margin-left:10px">
                            <input type="checkbox" asp-for="PrChecklist[22].IsChecked" class="form-check-input">
                            Complete signatures incl. approval
                            <input type="hidden" asp-for="PrChecklist[22].Description" value="Complete signatures incl. approval" />
                        </p>
                        <p style="margin-left:10px">
                            <input type="checkbox" asp-for="PrChecklist[23].IsChecked" class="form-check-input">
                            Specs/details in CN match specs in PR
                            <input type="hidden" asp-for="PrChecklist[23].Description" value="Specs/details in CN match specs in PR" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[24].IsChecked" class="form-check-input">
                            Approved Realignment, If applicable
                            <input type="hidden" asp-for="PrChecklist[24].Description" value="Approved Realignment, If applicable" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[25].IsChecked" class="form-check-input">
                            Approved WFP/Supplemental WFP
                            <input type="hidden" asp-for="PrChecklist[25].Description" value="Approved WFP/Supplemental WFP" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[26].IsChecked" class="form-check-input">
                            Approved PPMP/Supplemental PPMP
                            <input type="hidden" asp-for="PrChecklist[26].Description" value="Approved PPMP/Supplemental PPMP" />
                        </p>
                        <p>
                            <input type="checkbox" asp-for="PrChecklist[27].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[27].Description" value="Others" />
                            <u style="font-weight:bold">Others</u> <br />
                            &nbsp; &nbsp; &nbsp; &nbsp;  <input type="text" asp-for="PrChecklist[27].Others" style="border: none; border-bottom: 1px solid black;" />
                        </p>
                        <br />
                        <p style="font-weight:bold">
                            REMARKS:
                        </p>
                        <p style="font-weight:bold">
                            <input type="checkbox" asp-for="PrChecklist[28].IsChecked" class="form-check-input">
                            COMPLETE
                            <input type="hidden" asp-for="PrChecklist[28].Description" value="COMPLETE" />
                        </p>
                        <p style="font-weight:bold">
                            <input type="checkbox" asp-for="PrChecklist[29].IsChecked" class="form-check-input">
                            <input type="hidden" asp-for="PrChecklist[29].Description" value="Please comply with item(s) marked X on or before" />
                            Please comply with item(s) marked <br />
                            &nbsp; &nbsp; &nbsp; &nbsp; X on or before <input type="text" asp-for="PrChecklist[29].Others" style="border: none; border-bottom: 1px solid black;" />
                        </p>
                        <br />
                        <br />
                        <p style="font-family:'Times New Roman'; font-style:italic; font-size: 10pt">
                            CHECKED/REVIEWED BY:
                        </p>
                        <br />
                        <br />
                        <center>
                            <p class="underline">
                                STEFANIE LORRAINE D. TRINIDAD
                            </p>
                            <p style="font-size:8pt; font-style:italic">
                                Printed name, Signature and Date
                            </p>
                            <br/>
                            <button type="submit" class="bnt btn-primary" style="float: right;">Submit</button>
                          
                            <a class="btn btn-xs btn-success" target="_blank" href="@Url.Action("PrintChecklist1","Procurement",new { id = "" })" data-bs-toggle="print" title="Print">
                                <i class="ace-icon fa fa-file-pdf-o"></i> Print to PDF
                            </a>
                        </center>
                    </div>
                </div>
               </form>
            </div>
    </div>
</div>
<br />

<div class="alert" style="width: 550px; display: none;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <span id="alert-message"></span>
</div>

<script>
    $(document).ready(function () {
        $('.pr').select2();

        $('form').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("SaveChecklist", "Procurement")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (result) {
                    if (result.success) {
                        Lobibox.notify('success', {
                            title: 'Success',
                            msg: 'Submitted to End User..',
                            sound: false
                        });
                    } else {
                        Lobibox.notify('error', {
                            title: 'Error',
                            msg: 'Error submitting the form..',
                            sound: false
                        });
                    }
                    $('form')[0].reset();
                    $('.pr').val('').trigger('change');
                },
                error: function () {
                }
            });
        });
    });
</script>