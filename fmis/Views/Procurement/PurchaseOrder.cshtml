<script>


    function updaterefreshPage() {
        // Reload the current page
        location.reload();
    }


    var descriptionAdded = false;

    function updateDynamicForm() {
        // Create a new div element
        var dynamicFormDiv = document.createElement("div");
        dynamicFormDiv.classList.add("dynamic-form");


        var descriptionSection = document.getElementById('description-section-update');
        descriptionSection.classList.add('hidden');

        // Add the HTML content to the newly created div
        dynamicFormDiv.innerHTML = `
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="" style="font-weight:bold">PO NO.</label>
                            <input type="text" class="form-control" name="PoNo" readonly value="@ViewBag.FormattedPoNo">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="" style="font-weight:bold">PO DATE</label>
                            <input type="text" class="form-control" id="rpqdate" name="PoDate">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="" style="font-weight:bold">SUPPLIER</label>
                            <input type="text" class="form-control" name="Supplier" required>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="" style="font-weight:bold">AMOUNT</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="Amount" required>
                                <span class="input-group-btn" style="padding-left:6px;">
                                    <button type="button" class="btn btn-xs btn-danger close-btn"><span class="fa fa-trash"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>`;

        // Add DESCRIPTION section only if it hasn't been added before
        if (!descriptionAdded) {
            dynamicFormDiv.innerHTML += `
                    <div class="row" id="description-section">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label style="font-weight:bold"> DESCRIPTION: </label>
                                <textarea type="text" class="form-control"> </textarea>
                            </div>
                        </div>
                    </div>`;
            descriptionAdded = true; // Set the flag to true after adding DESCRIPTION section
        }

        // Get the original form and append the dynamicFormDiv below it
        var originalForm = document.getElementById("original-form-update");
        originalForm.parentNode.insertBefore(dynamicFormDiv, originalForm.nextSibling);

        // Attach event listener to close button
        var closeBtn = dynamicFormDiv.querySelector('.close-btn');
        closeBtn.addEventListener('click', function () {
            dynamicFormDiv.remove(); // Remove the dynamic form when close button is clicked
        });
    }




    var itemId;
    $(document).ready(function () {
        $(".btn-edit").click(function () {
            itemId = $(this).data("id");

            $.ajax({
                type: "GET",
                url: '@Url.Action("GetPo", "Procurement")',
                data: { id: itemId },
                success: function (data) {
                    $("#abstractNo").val(data.abstractNo);
                    $("#poNo").val(data.poNo);
                    $("#poDate").val(data.poDate);
                    $("#prNo").val(data.prNo);
                    $("#prDate").val(data.prDate);
                    $("#supplier").val(data.supplier);
                    $("#amount").val(data.amount);
                    $("#rmop").val(data.rmop);
                    $("#description").val(data.description);
                    $("#remarks").val(data.remarks);
                    $("#editPo").modal("show");
                }
            });
        });

        $("#poDate").datepicker({
            dateFormat: "MM d, yy"

        });

        $("#saveChanges").click(function (e) {
            e.preventDefault();
            var newData = {
                Id: itemId,
                AbstractNo: $("#abstractNo").val(),
                PoNo: $("#poNo").val(),
                PoDate: $("#poDate").val(),
                PrNo: $("#prNo").val(),
                PrDate: $("#prDate").val(),
                Supplier: $("#supplier").val(),
                Amount: $("#amount").val(),
                Rmop: $("#rmop").val(),
                Description: $("#description").val(),
                Remarks: $("#remarks").val(),
                
            };

            $.ajax({
                type: "POST",
                url: '@Url.Action("UpdatePo", "Procurement")',
                data: JSON.stringify(newData),
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    if (result.success) {
                        Lobibox.notify('success', {
                            title: 'Success',
                            msg: 'Data saved successfully..',
                            sound: false
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 1500);
                    } else {
                        Lobibox.notify('error', {
                            title: 'Error',
                            msg: 'Error submitting the form..',
                            sound: false
                        });
                        setTimeout(function () {
                            $("#editPo").modal("hide");
                            location.reload();
                        }, 1000);
                    }
                    //$("#editPo").modal("hide");
                    //$('form')[0].reset();
                }
            });
        });

        $("#prNo").change(function () {
            var selectedPrNo = $(this).val();
            $.ajax({
                url: '@Url.Action("GetDate","Procurement")',
                type: 'GET',
                data: { prNo: selectedPrNo },
                success: function (result) {
                    $("#prDate").val(result);
                },
                error: function () {
                    console.log('Error fetching date');
                }
            });
        });

        $("#forBudget").on("click", function (e) {
            e.preventDefault();

            var poid = $(this).data("poid");
            console.log(poid);

            $.ajax({
                url: "@Url.Action("BacSignature", "Procurement")",
                type: "POST",
                data: { poid: poid },
                success: function (response) {
                    if (response.success) {
                        Lobibox.notify('success', {
                            title: 'Success',
                            msg: response.message
                        });
                    } else {
                        Lobibox.notify('error', {
                            title: 'Error',
                            msg: response.message
                        });
                    }
                },
                error: function () {
                    Lobibox.notify('error', {
                        size: 'mini',
                        title: 'Error',
                        msg: 'An error occurred during the request.'
                    });
                }
            });
        });

    });
</script>