@model List<fmis.Models.Procurement.PuIndexing>


<style>
    .ui-datepicker {
        width: 250px !important;
    }
</style>

<div class="col-xs-12">
    <div id="addIndexing" class="modal fade" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 class="smaller lighter blue no-margin">Create Index</h3>
                </div>
                <form>
                    <div class="modal-body">
                        <div>
                            <h4 class="grey lighter smaller">
                                Please complete the form.
                            </h4>
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> PO NO. </label>
                                        <input type="text" class="form-control" name="PoNo" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> PR NO. </label>
                                        <input type="text" class="form-control" name="Prno" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">  ITEM/DESCRIPTION </label>
                                        <textarea class="form-control" name="ItemDesc"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">Remarks</label>
                                        <input type="text" class="form-control" name="Remarks" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">  GP  </label>
                                        <input type="text" class="form-control" name="Gp" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="Date" style="font-weight:bold"> RMOP </label>
                                        <input type="text" class="form-control" name="Rmop" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">Date Released to Budget</label>
                                        <input type="text" class="form-control" id="budgetreleased" name="BudgetReleased" required>
                                    </div>
                                    <div class="form-group">
                                        <br/>
                                        <label for="" style="font-weight:bold">Date Released Approve PO to Supply</label>
                                        <input type="text" class="form-control" id="supplyreleased" name="SupplyReleased" required>
                                    </div>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-xs btn-primary">Submit <span class="fa fa-check-square-o"></span> </button>
                        <a data-dismiss="modal" class="btn btn-xs btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $("#budgetreleased").datepicker({
            dateFormat: "MM d, yy"

        });
        $("#supplyreleased").datepicker({
            dateFormat: "MM d, yy"

        });

        $('form').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("SaveIndex", "Procurement")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (result) {
                    if (result.success) {
                        Lobibox.notify('success', {
                            title: 'Success',
                            msg: 'Data saved successfully..',
                            sound: false
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 2000);
                    } else {
                        Lobibox.notify('error', {
                            title: 'Error',
                            msg: 'Error submitting the form..',
                            sound: false
                        });
                        setTimeout(function () {
                            $("#addIndexing").modal("hide");
                            location.reload();
                        }, 1000);
                    }
                },
                error: function () {
                }
            });
        });
    });
</script>