@model fmis.Models.UserModels.CombineIndexFmisUser

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .hr {
        border: 1px solid black;
    }

    #nav {
        font-size: 12pt;
    }

    .pbutton {
        margin-left: 3px;
    }
</style>
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="select2Input">Add Employee</label>
                        <br />
                        <br />
                        <select class="form-control users" style="width: 100%;" name="userId">
                            @foreach(var user in Model.Users)
                            {
                                <option value="@user.Id">@user.Fname, @user.Lname</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>


<h3 class="grey lighter smaller">
    Index of Payment Users
</h3>
<hr>

<div class="row">
    <div class="col-md-1">
        <div class="form-group form-inline" style="margin-bottom: 10px;">
            <a class="btn btn-success btn-sm" data-toggle="modal" data-target="#myModal">
                <i class="ace-icon fa fa-plus "></i>Create New Users
            </a>
        </div>
    </div>
</div>
<br />


<table class="table table-striped" style="width: 900px">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Name
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PuUser)
        {
            @if (item.Username != "hr_admin")
            {
                <tr>
                    <td>@item.Username</td>
                    <td>
                        @if (item.Fname is null && item.Lname is null)
                        {
                            @("-")
                            ;
                        }
                        else
                        {
                            @(@item.Fname + " " + @item.Lname)
                        }
                    </td>
                    <td>
                        <a class="btn btn-xs btn-danger" href="@Url.Action("DeleteUser","IndexOfPayment",new { id = @item.Id })"
                           onclick=" if (confirm('Are you sure you want to delete this into the database?')) {
                                          // Save it!
                                         Lobibox.notify('error', {
                                               title: 'Deleted',
                                                msg: 'Fund Code Successfully Deleted!',
                                        });
                                        }
                                            else
                                        {
                                          return false
                                        };">
                            <i class="ace-icon fa fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('.users').select2();

        $('form').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("SavePuUsers", "Procurement")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (result) {
                    if (result.success) {
                        Lobibox.notify('success', {
                            title: 'Success',
                            msg: 'User added successfully..',
                            sound: false
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 2000);
                    } else {
                        Lobibox.notify('error', {
                            title: 'Error',
                            msg: 'Error submitting the form..',
                            sound: false
                        });
                        setTimeout(function () {
                            $("#myModal").modal("hide");
                            location.reload();
                        }, 1000);
                    }
                },
                error: function () {
                }
            });
        });
    });
</script>