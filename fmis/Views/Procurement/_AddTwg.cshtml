@model List<fmis.Models.Procurement.Twg>

<style>
    .ui-datepicker {
        width: 250px !important;
    }
</style>

<div class="col-xs-12">
    <div id="createTwg" class="modal fade" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 class="smaller lighter blue no-margin">Create Twg </h3>
                </div>
                <form>
                    <div class="modal-body">
                        <div>
                            <h4 class="grey lighter smaller">
                                Please complete the form.
                            </h4>
                            <br />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> TWG NO. </label>
                                        <input type="text" class="form-control" name="TwgNo" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">  DATE </label>
                                        <input type="text" class="form-control" id="twgdate" name="TwgDate" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">  RECOMMENDATION </label>
                                        <input type="text" class="form-control" name="Recommendation" required>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> PRNO </label>
                                        <select class="form-control" id="PrNo" name="PrNo" asp-items="ViewBag.PrId">
                                            <option value="">Select Pr No.</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">  DATE. </label>
                                        <input type="text" class="form-control" id="prdate" name="PrDate" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> RECEIVED BY  </label>
                                        <input type="text" class="form-control" name="ReceivedBy">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-xs btn-primary">Submit <span class="fa fa-check-square-o"></span> </button>
                        <a data-dismiss="modal" class="btn btn-xs btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#PrNo").change(function () {
            var selectedPrNo = $(this).val();
            $.ajax({
                url: '@Url.Action("GetDate","Procurement")',
                type: 'GET',
                data: { prNo: selectedPrNo },
                success: function (result) {
                    $("#prdate").val(result);
                },
                error: function () {
                    console.log('Error fetching date');
                }
            });
        });

        $("#twgdate").datepicker({
            dateFormat: "MM d, yy"

        });

        $('form').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("SaveTwg", "Procurement")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (result) {
                    if (result.success) {
                        Lobibox.notify('success', {
                            title: 'Success',
                            msg: 'Data saved successfully..',
                            sound: false
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 2000);
                    } else {
                        Lobibox.notify('error', {
                            title: 'Error',
                            msg: 'Error submitting the form..',
                            sound: false
                        });
                        setTimeout(function () {
                            $("#my-modal").modal("hide");
                            location.reload();
                        }, 1000);
                    }
                },
                error: function () {
                }
            });
        });
    });
</script>