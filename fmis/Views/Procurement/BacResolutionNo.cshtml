}




<h3 class="grey lighter smaller">
    BAC RESOLUTION NO.
</h3>
<hr>

<div class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div id="modalContent"></div> <!-- Placeholder for content -->
        </div>
    </div>
</div>

<div class="modal fade" id="EditModalBacResNo" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div id="modalContentEdit"></div> <!-- Placeholder for CanvassEdit content -->
        </div>
    </div>
</div>


<p>
    <a class="btn btn-success btn-sm" href="#my-modal" role="button" data-toggle="modal">
        <i class="ace-icon fa fa-plus "></i>Create New
    </a>
</p>
<br />
<table class="table table-hover" style="width: 900px">
    <thead>
        <tr>
            <th>
                BAC RESOLUTION NO.
            </th>
     
            <th>
                ACTIONS
            </th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td>
                10101010101
            </td>
            <td>
                <a class="btn btn-xs btn-primary btn-edit" onclick="openEditBacResNoModal()">
                    <i class="ace-icon fa fa-edit"></i>Edit
                </a>
            </td>
        </tr>

    </tbody>
</table>

<div class="col-xs-12">

    <div id="my-modal" class="modal fade" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 class="smaller lighter blue no-margin">Create Bac Resolution No.</h3>
                </div>
                <form asp-action="Create" method="post">
                    <div class="modal-body">
                        <div>
                            <br />

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">BAC RES NO. </label>
                                        <input type="text" class="form-control" id="" name="" required>
                                    </div>
                                    
                                </div>
                            </div>



                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" onclick="showNotification()" class="btn btn-xs btn-primary">Submit <span class="fa fa-check-square-o"></span> </button>
                        <a data-dismiss="modal" class="btn btn-xs btn-danger">Cancel</a>
                    </div>
                </form>
            </div><!-- /.modal-content -->

        </div><!-- /.modal-dialog -->
    </div>




    <!-- PAGE CONTENT ENDS -->
</div>

<script>
    function openEditBacResNoModal() {
        // Load the CanvassEdit content into the modal
        $.get("/Procurement/BacResolutionNoEdit", function (data) {
            $("#modalContentEdit").html(data);
            $("#EditModalBacResNo").modal("show");
        });
    }
</script>

