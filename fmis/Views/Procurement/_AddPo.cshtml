@model List<fmis.Models.Procurement.Po>

<style>
    .ui-datepicker {
        width: 250px !important;
    }
</style>

<div class="col-xs-12">
    <div id="my-modal" class="modal fade" style="display: none;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 class="smaller lighter blue no-margin">Create Purchase Order</h3>
                </div>
                <form asp-controller="Procurement" asp-action="SavePo" method="post">
                    <div class="modal-body">
                        <div>
                            <h4 class="grey lighter smaller">
                                Please complete the form.
                            </h4>
                            <br />
                            <div class="row" id="original-form">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> ABSTRACT NO. </label>
                                        <select class="form-control" name="AbstractNo" asp-items="ViewBag.Abstract">
                                            <option value="">Select Abstract No.</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> PO NO. </label>
                                        <input type="text" class="form-control" name="PoList[0].PoNo" value="@ViewBag.FormattedPoNo">
                                    </div>
                                    <div class="form-group" id="description-section" >
                                        <label style="font-weight:bold"> DESCRIPTION: </label>
                                        <textarea type="text" name="Description" class="form-control"> </textarea>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> PR NO  </label>
                                        <select class="form-control" name="PrNo" id="PrNo" asp-items="ViewBag.Pr">
                                            <option value="">Select Pr No.</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> PO DATE </label>
                                        <input type="text" class="form-control" id="rpqdate" name="PoList[0].PoDate">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> PR DATE </label>
                                        <input type="text" class="form-control" id="Date" name="PrDate" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">SUPPLIER </label>
                                        <input type="text" class="form-control" name="PoList[0].Supplier" required>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">REMARKS</label>
                                        <input type="text" class="form-control" name="Remarks">
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold">AMOUNT</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" name="PoList[0].Amount" required>
                                            <span class="input-group-btn" style="padding-left:6px;">
                                                <button type="button" class="btn btn-success btn-xs" onclick="addDynamicForm()"> <span class="fa fa-plus"></span> </button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-xs btn-primary">Submit <span class="fa fa-check-square-o"></span> </button>
                        <a data-dismiss="modal" class="btn btn-xs btn-danger" onclick="refreshPage()">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>

    function refreshPage() {
        location.reload();
    }


    var descriptionAdded = false;
    var dynamicFormIndex = 1;

    function addDynamicForm() {
        var dynamicFormDiv = document.createElement("div");
        dynamicFormDiv.classList.add("dynamic-form");


        var descriptionSection = document.getElementById('description-section');
        descriptionSection.classList.add('hidden');

        dynamicFormDiv.innerHTML = `
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="" style="font-weight:bold">PO NO.</label>
                            <input type="text" class="form-control" name="PoList[${dynamicFormIndex}].PoNo" value="@ViewBag.FormattedPoNo">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="" style="font-weight:bold">PO DATE</label>
                                <input type="text" class="form-control" id="rpqdatedyn" name="PoList[${dynamicFormIndex}].PoDate">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="" style="font-weight:bold">SUPPLIER</label>
                            <input type="text" class="form-control" name="PoList[${dynamicFormIndex}].Supplier" required>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="" style="font-weight:bold">AMOUNT</label>
                        <div class="input-group">
                            <input type="text" class="form-control" name="PoList[${dynamicFormIndex}].Amount" required>
                            <span class="input-group-btn" style="padding-left:6px;">
                                <button type="button" class="btn btn-xs btn-danger close-btn"><span class="fa fa-trash"></span></button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>`;

        if (!descriptionAdded) {
            dynamicFormDiv.innerHTML += `
                <div class="row" id="description-section">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label style="font-weight:bold"> DESCRIPTION: </label>
                            <textarea type="text" class="form-control"> </textarea>
                        </div>
                    </div>
                </div>`;
            descriptionAdded = true;
        }

        var originalForm = document.getElementById("original-form");
        originalForm.parentNode.insertBefore(dynamicFormDiv, originalForm.nextSibling);

        $("#rpqdatedyn").datepicker({
            dateFormat: "MM d, yy"
        });

        dynamicFormIndex++;

        var closeBtn = dynamicFormDiv.querySelector('.close-btn');
        closeBtn.addEventListener('click', function () {
            dynamicFormDiv.remove();
        });
    }



    $(document).ready(function () {
        $("#PrNo").change(function () {
            var selectedPrNo = $(this).val();
            $.ajax({
                url: '@Url.Action("GetDate","Procurement")',
                type: 'GET',
                data: { prNo: selectedPrNo },
                success: function (result) {
                    $("#Date").val(result);
                },
                error: function () {
                    console.log('Error fetching date');
                }
            });
        });

        $("#rpqdate").datepicker({
            dateFormat: "MM d, yy"

        });

        $('form').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("SavePo", "Procurement")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (result) {
                    if (result.success) {
                        Lobibox.notify('success', {
                            title: 'Success',
                            msg: 'Data saved successfully..',
                            sound: false
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 2000);
                    } else {
                        Lobibox.notify('error', {
                            title: 'Error',
                            msg: 'Error submitting the form..',
                            sound: false
                        });
                        setTimeout(function () {
                            $("#my-modal").modal("hide");
                            location.reload();
                        }, 1000);
                    }
                },
                error: function () {
                }
            });
        });
    });
</script>