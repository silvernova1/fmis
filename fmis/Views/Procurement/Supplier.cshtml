@model List<fmis.Models.Procurement.Supplier>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Procurement" + " " + "(Supplier)";
}

<h3 class="grey lighter smaller">
    List Of Supplier
</h3>
<hr>

<div class="col-xs-12">
    <div id="editSupplier" class="modal fade" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 class="smaller lighter blue no-margin">Update Supplier</h3>
                </div>
                <form>
                    <div class="modal-body">
                        <div>
                            <h4 class="grey lighter smaller">
                                Please complete the form.
                            </h4>
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> Supplier Name </label>
                                        <input type="text" name="supplierName" id="supplierName" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="" style="font-weight:bold"> Supplier Address </label>
                                        <input type="text" name="supplierAddress" id="supplierAddress" class="form-control" required>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-xs btn-primary" id="saveChanges">Submit <span class="fa fa-check-square-o"></span> </button>
                        <a data-dismiss="modal" class="btn btn-xs btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<p>
    <a class="btn btn-success btn-sm" href="#addSupplier" role="button" data-toggle="modal">
        <i class="ace-icon fa fa-plus "></i>Create New
    </a>
</p>
<br />
<table class="table table-hover" style="width: 600px">
    <thead>
        <tr>
            <th>
                Supplier Name
            </th>
            <th>
               Supplier Address
            </th>
            
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.SupplierName
                    </td>
                    <td>
                        @item.SupplierAddress
                    </td>
                    <td>
                        <a class="btn btn-xs btn-primary btn-edit" data-id="@item.Id">
                            <i class="ace-icon fa fa-edit"></i>Edit
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">
                    <div class="alert alert-danger">
                        No data found.
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_AddSupplier")


<script>
    var itemId;
    $(document).ready(function () {
        $(".btn-edit").click(function () {
            itemId = $(this).data("id");

            $.ajax({
                type: "GET",
                url: '@Url.Action("GetSupplier", "Procurement")',
                data: { id: itemId },
                success: function (data) {

                    $("#supplierName").val(data.supplierName);
                    $("#supplierAddress").val(data.supplierAddress);
                    $("#editSupplier").modal("show");
                }
            });
        });

        $("#saveChanges").click(function (e) {
            e.preventDefault();
            var newData = {
                Id: itemId,
                SupplierName: $("#supplierName").val(),
                SupplierAddress: $("#supplierAddress").val()
            };

            $.ajax({
                type: "POST",
                url: '@Url.Action("UpdateSupplier", "Procurement")',
                data: JSON.stringify(newData),
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    if (result.success) {
                        Lobibox.notify('success', {
                            title: 'Success',
                            msg: 'Data saved successfully..',
                            sound: false
                        });
                        setTimeout(function () {
                            location.reload();
                        }, 1500);
                    } else {
                        Lobibox.notify('error', {
                            title: 'Error',
                            msg: 'Error submitting the form..',
                            sound: false
                        });
                        setTimeout(function () {
                            $("#editModal").modal("hide");
                            location.reload();
                        }, 1000);
                    }
                }
            });
        });
    });
</script>


































