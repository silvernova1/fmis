@model fmis.Models.Budget_allotment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="grey lighter smaller">
    Edit Budget Allotment
</h3>
<hr />
<div class="row">
    <div class="col-xs-12">
        <form asp-action="Edit">
            <div class="col-xs-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BudgetAllotmentId" />
                <input type="hidden" asp-for="Created_at" />
                <div class="form-group">
                    <label>Yearly Reference:</label>
                    <select class="form-control" asp-for="YearlyReferenceId" asp-items="ViewBag.YearlyReferenceId"></select>
                </div>
                <div class="form-group">
                    <label>Allotment Series:</label>
                    <input asp-for="Allotment_series" class="form-control" />
                    <span asp-validation-for="Allotment_series" class="text-danger"></span>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group">
                    <label>Allotment Title:</label>
                    <input asp-for="Allotment_title" class="form-control" />
                    <span asp-validation-for="Allotment_title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Allotment Code:</label>
                    <input asp-for="Allotment_code" class="form-control" />
                    <span asp-validation-for="Allotment_code" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group" style="margin-left:13px;">
                <input type="submit" value="Save" class="btn btn-success btn-sm" />|
                <a class="btn btn-default btn-sm" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
