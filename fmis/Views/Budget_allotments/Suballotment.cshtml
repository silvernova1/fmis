@model fmis.Models.Budget_allotment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sub Allotment List</h2>
<hr />

<!-- The Modal -->
<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
        </div>
    </div>
</div>

<div class="modal fade" id="DeleteModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<p>
    <a asp-controller="Sub_allotment" asp-action="Create" class="btn btn-success btn-sm" asp-route-id="@ViewBag.BudgetId">Create New</a> | <a class=" btn btn-primary btn-sm" asp-controller="Budget_allotments" asp-action="Index">Back to Budget Allotment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Sub Allotment Code
            </th>
            <th>
                Sub Allotment Title
            </th>
            <th>
                ORS Head
            </th>
            <th>
                Actions
            </th>
            <th>Funds Realignment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sub_allotments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Suballotment_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Suballotment_title)
                </td>
                @*  <td>
                        @Html.DisplayFor(modelItem => item.BudgetAllotmentId)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SubId" class="btn btn-info btn-sm">Edit<span class="glyphicon glyphicon-edit"></span></a>
                    <a asp-action="Delete" asp-route-id="@item.SubId" class="btn btn-danger btn-sm">Delete<span class="glyphicon glyphicon-trash"></span></a>

                </td>
                <td>
                    <a href="#" class="btn btn-info"><span class="glyphicon glyphicon-transfer"></span>Funds Realignment</a>
                </td>
            </tr>
        }
    </tbody>
</table>
