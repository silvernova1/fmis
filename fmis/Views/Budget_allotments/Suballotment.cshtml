@model fmis.Models.Budget_allotment
@using System.Globalization;
@{
    ViewData["Title"] = "Sub_allotment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="grey lighter smaller">
    Sub Allotments
</h3>
<hr />
<div class="row  pull-left">
    <div class="space-5"></div>

    <div class="col-xs-12 infobox-container">
        <div class="infobox infobox-green">
            <div class="infobox-icon">
                <i class="ace-icon fa fa-money"></i>
            </div>

            <div class="infobox-data">
                <span class="infobox-data-number" style="font-size:11pt; color:grey;">
                    @ViewBag.beginning_balance
                </span>
                <div class="infobox-content">
                    <span class="label label-success arrowed-in arrowed-in-right"> Beginning Balance </span>
                </div>
            </div>
        </div>
        <div class="infobox infobox-orange2">
            <div class="infobox-icon">
                <i class="ace-icon fa fa-bar-chart-o"></i>
            </div>
            <div class="infobox-data">
                <span class="infobox-data-number" style="font-size:11pt; color:grey;">
                    @ViewBag.utilization_amount
                </span>
                <div class="infobox-content">
                    <span class="label label-warning arrowed-in arrowed-in-right"> Utilization Balance </span>
                </div>
            </div>
        </div>
        <div class="infobox infobox-red">
            <div class="infobox-icon">
                <i class="ace-icon fa fa-calculator"></i>
            </div>
            <div class="infobox-data">
                <span class="infobox-data-number" style="font-size:11pt; color: grey;">
                    @ViewBag.remaining_balance
                </span>
                <div class="infobox-content">
                    <span class="label label-danger arrowed-in arrowed-in-right"> Remaining Balance </span>
                </div>
            </div>
        </div>
    </div><!-- /.widget-main -->
</div><!-- /.widget-body -->
<br />
<br />
<br />
<br />
<div class="modal" id="createModal" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body" id="suballotment_create">

            </div>
        </div>
    </div>
</div>

<div class="modal" id="editModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body" id="suballotment_edit">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="DeleteModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">


        </div>
    </div>
</div>

<p>
    <button type="button" asp-controller="Sub_allotment" asp-action="Create" class="btn btn-success btn-sm" onclick="createSub_allotment(@ViewBag.budget_id)">
        <i class="ace-icon fa fa-plus "></i>Create New
    </button> |
    <a class=" btn btn-primary btn-sm" asp-controller="Budget_allotments" asp-action="Index">
        <span class="glyphicon glyphicon-arrow-left"></span> Back to Budget Allotment
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Sub Allotment Code
            </th>
            <th>
                Sub Allotment Title
            </th>
            <th>
                ORS Head
            </th>
            <th>
                Actions
            </th>
            <th>
                Funds Realignment
            </th>
            <th>
                Beginning Balance
            </th>
            <th>
                Utilization Balance
            </th>
            <th>
                Remaining Balance
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sub_allotments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Suballotment_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Suballotment_title)
                </td>
                <td>
                    @*   @Html.DropDownList("pi_userid", null, htmlAttributes: new { @class = "prexc form-control" })*@
                </td>
                <td>
                    <button class="btn btn-primary btn-sm" onclick="getEditSub_allotment(@ViewBag.budget_id,@item.SubId)">Edit <span class="glyphicon glyphicon-edit"></span></button>

                    <a asp-controller="Sub_allotment" asp-action="Delete" asp-route-id="@item.SubId" asp-route-budget_id="@ViewBag.budget_id" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#DeleteModalCenter">Delete<span class="glyphicon glyphicon-trash"></span></a>

                </td>
                <td>
                    <a asp-controller="Sub_allotment_Realignment" asp-route-fundsource_id="@item.SubId" asp-route-BudgetId="@ViewBag.budget_id" asp-action="Index" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-transfer"></span> Sub Realignment</a>
                </td>
                <td>
                    <b class="green">
                        <span>@item.Beginningsub_balance.ToString("C", new CultureInfo("en-PH"))</span>
                    </b>
                </td>
                <td>
                    <b class="orange">
                        <span>@item.utilization_amount.ToString("C", new CultureInfo("en-PH"))</span>
                    </b>
                </td>
                <td>
                    <b class="red">
                        <span>@item.Remainingsub_balance.ToString("C", new CultureInfo("en-PH"))</span>
                    </b>
                </td>


            </tr>
        }
    </tbody>
</table>

<script>

    function createSub_allotment(budget_id) {
         $("#createModal").modal({ backdrop: 'static', keyboard: false });
         $("#suballotment_create").html(loading);
         var url = '@Url.Action("Create", "Sub_allotment")';
         url += "?budget_id=" + budget_id
         $.get(url, function (result) {
            setTimeout(function () {
                $("#suballotment_create").html(result);
            }, 500);
         });
    }

    function deleteSub_allotment(budget_id) {
         $("#deleteModal").modal({ backdrop: 'static', keyboard: false });
         $("#suballotment_delete").html(loading);
         var url = '@Url.Action("Delete", "Sub_allotment")';
         url += "?budget_id=" + budget_id
         $.get(url, function (result) {
            setTimeout(function () {
                $("#suballotment_delete").html(result);
            }, 500);
         });
     }

    function getEditSub_allotment(budget_id, sub_allotment_id) {
         $("#editModal").modal({ backdrop: 'static', keyboard: false });
        $("#suballotment_edit").html(loading);
         var url = '@Url.Action("Edit", "Sub_allotment")';
        url += "?budget_id=" + budget_id + "&sub_allotment_id=" + sub_allotment_id
         $.get(url, function (result) {
            setTimeout(function () {
                $("#suballotment_edit").html(result);
            }, 500);
         });
    }



    let generate_token = () => {
        let s4 = () => {
            return Math.floor((1 + Math.random()) * 0x10000)
                .toString(16)
                .substring(1);
        }
        return s4() + s4() + '-' + s4() + '-' + s4() + '-' + s4() + '-' + s4() + s4() + s4();
    }

    function subAllotmentToken() {
        suballotment_token = generate_token();
        $("#subs_input_token").val(suballotment_token);
    }
</script>
