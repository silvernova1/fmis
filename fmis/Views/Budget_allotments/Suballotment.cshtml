@model fmis.Models.Budget_allotment
@using System.Globalization;
@{
    ViewData["Title"] = "Sub_allotment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="grey lighter smaller">
    Sub Allotments
</h3>
<hr />
<div class="row  pull-left">
    <div class="space-5"></div>

    <div class="col-xs-12 infobox-container">
        <div class="infobox infobox-green">
            <div class="infobox-icon">
                <i class="ace-icon fa fa-money"></i>
            </div>

            <div class="infobox-data">
                <span class="infobox-data-number">@ViewBag.subfunds</span>
                <div class="infobox-content">Beginning Balance</div>
            </div>
        </div>

        <div class="infobox infobox-red">
            <div class="infobox-icon">
                <i class="ace-icon fa fa-calculator"></i>
            </div>

            <div class="infobox-data">
                <span class="infobox-data-number">0</span>
                <div class="infobox-content">Remaining Balance</div>
            </div>
        </div>
    </div><!-- /.widget-main -->
</div><!-- /.widget-body -->
<br />
<br />
<br />
<br />
<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg" style="width:50%;">
        <div class="modal-content">
        </div>
    </div>
</div>

<div class="modal fade" id="DeleteModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<p>
    <a asp-controller="Sub_allotment" asp-action="Create" class="btn btn-success btn-sm" asp-route-id="@ViewBag.BudgetId" data-toggle="modal" data-target="#myModal">
        <i class="ace-icon fa fa-plus "></i> Create New
    </a> |
    <a class=" btn btn-primary btn-sm" asp-controller="Budget_allotments" asp-action="Index">
        <span class="glyphicon glyphicon-arrow-left"></span> Back to Budget Allotment
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Sub Allotment Code
            </th>
            <th>
                Sub Allotment Title
            </th>
            <th>
                ORS Head
            </th>
            <th>
                Actions
            </th>
            <th>
                Funds Realignment
            </th>
            <th>
                Beginning Balance
            </th>
            <th>
                Remaining Balance
            </th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model.Sub_allotments)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Suballotment_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suballotment_title)
            </td>
            <td>
                @*   @Html.DropDownList("pi_userid", null, htmlAttributes: new { @class = "prexc form-control" })*@
            </td>
            <td>
                <a asp-controller="Sub_allotment" asp-action="Edit" asp-route-id="@item.SubId" asp-route-BudgetId="@ViewBag.BudgetId" class="btn btn-info btn-sm">Edit<span class="glyphicon glyphicon-edit"></span></a>
                <a asp-controller="Sub_allotment" asp-action="Delete" asp-route-id="@item.SubId" asp-route-BudgetId="@ViewBag.BudgetId" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#DeleteModalCenter">Delete<span class="glyphicon glyphicon-trash"></span></a>

            </td>
            <td>
                <a asp-controller="SubAllotment_Realignment" asp-action="Index" asp-route-id="@item.SubId" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-transfer"></span> Funds Realignment</a>
            </td>
            @*<td>
          <b class="green">180,560.00</b>
          </td>
           <td>
         <b class="red">1,260.750.00</b>
        </td>*@
            <td>
                @{
                    var Amount = (List<fmis.Models.Suballotment_amount>)ViewBag.SubQuery;
                }
                <span>@Amount.FirstOrDefault(x => x.Id == item.Id)?.Amount.ToString("C", new CultureInfo("en-PH"))</span>
            </td>
            <td>
                @{
                    var Remsubamount = (List<fmis.Models.Suballotment_amount>)ViewBag.Subal;
                }
                <b class="red">@Remsubamount.FirstOrDefault(x => x.Id == item.Id)?.Remsubamount.ToString("C", new CultureInfo("en-PH"))</b>
            </td>

        </tr>
         }
    </tbody>
</table>

<script type="text/javascript">
    function getOption(data) {
        var item_id = data.get(0).id;
        var complaint_id = data.get(0).value;
        var url = '@Url.Action("Sub_allotment", "Budget_allotments")' + "?id=" + item_id + "&ComplainStatus=" + complaint_id;

        $.get(url, function (result) {
            console.log(result)
        });
    }
</script>
