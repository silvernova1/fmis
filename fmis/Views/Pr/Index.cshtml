															<br />
															<b>Remarks</b>
															<div class="invalid-feedback">@abstractNo?.Remarks</div>
														</div>
													</div>
												}
												else
												{
													<div role="tabpanel" class="bs-stepper-pane fade active dstepper-block abstractNo-date" data-prno="@items.Prno">
														<div class="form-group">
															<label for="inputMailForm"></label>
															<br />
															<br />
															<b></b>
															<div class="invalid-feedback"></div>
														</div>
													</div>
												}
												@if (po != null)
												{
													<div role="tabpanel" class="bs-stepper-pane fade active dstepper-block po-date" data-prno="@items.Prno">
														<div class="form-group">
															<label for="inputMailForm">@po?.PoDate.ToString("MMM d, yyyy")</label>
															<br />
															<br />
															<b>Remarks</b>
															<div class="invalid-feedback">@po?.Remarks</div>
														</div>
													</div>
												}
												else
												{
													<div role="tabpanel" class="bs-stepper-pane fade active dstepper-block po-date" data-prno="@items.Prno">
														<div class="form-group">
															<label for="inputMailForm"></label>
															<br />
															<br />
															<b></b>
															<div class="invalid-feedback"></div>
