															<div class="invalid-feedback"></div>
														</div>
													</div>
												}
												@if (twg != null)
												{
													<div role="tabpanel" class="bs-stepper-pane fade active dstepper-block twg-date" data-prno="@items.Prno">
														<div class="form-group">
															<label for="inputMailForm">@twg?.TwgDate.ToString("MMM d, yyyy")</label>
															<br />
														<br />
															<b>Remarks</b>
															<div class="invalid-feedback">@twg?.Remarks</div>
														</div>
													</div>
												}
												else
