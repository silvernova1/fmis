												<div role="tabpanel" class="bs-stepper-pane fade active dstepper-block twg-date" data-prno="@items.Prno">
														<div class="form-group">
															<label for="inputMailForm"></label>
															<br />
														<br />
															<b></b>
															<div class="invalid-feedback"></div>
														</div>
													</div>
												}
												@if (abstractNo != null)
												{
													<div role="tabpanel" class="bs-stepper-pane fade active dstepper-block abstractNo-date" data-prno="@items.Prno">
														<div class="form-group">
															<label for="inputMailForm">@abstractNo?.AbstractDate.ToString("MMM d, yyyy")</label>
