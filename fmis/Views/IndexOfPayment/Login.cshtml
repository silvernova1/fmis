@model fmis.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "DOHRO7 Index of Payment | Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



<div class="row">
    <div class="col-xs-12">
        <div class="card" id="login" style="width:25rem; height: 35rem; margin-left: 25%; border-width: 2px;">
            <br>
            <center>
                <h6>Sign in to start your session.</h6>
                <img src="~/portfolio_bootstrap/img/about/doh.png" alt="" height="100" width="100">
            </center>
            <div class="card-body ">
                <section>
                    <form id="account" asp-controller="IndexOfPayment" asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group mt-3">
                            <i class="bi bi-person-circle"></i> <label asp-for="Username" style="margin-right:75%;"></label>
                            @*<span asp-validation-for="Username" class="text-danger"></span>*@
                            <input asp-for="Username" class="form-control" />

                        </div>
                        <div class="form-group mt-3">
                            <i class="bi bi-lock-fill"></i> <label asp-for="Password" style="margin-right:77%;"></label>
                            @*<span asp-validation-for="Password" class="text-danger"></span>*@
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe" style="margin-right:60%;">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                            <br />
                        </div>
                        <br>
                        <div class="form-group">
                            <button type="submit" id="btnsubmit" class="btn btn-success btn-block btn-flat" style="margin-left:70%; font-size:13px;">SIGN IN <i class="bi bi-box-arrow-in-right"></i> </button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

