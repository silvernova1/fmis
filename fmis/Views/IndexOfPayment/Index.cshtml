    function get_sbu() {
        var selected_val = $('#ddlBranches').find(":selected").attr('value');
        $.ajax({
            type: "POST",
            url: '@Url.Action("selectAT", "DV")',
            data: "id=" + selected_val,
            success: function (data) {
                if (data.length > 0) {
                    $('#payee').val(data[0].payee);
                }
                else {
                    $('#payee').val('');
                }
            }
        });
