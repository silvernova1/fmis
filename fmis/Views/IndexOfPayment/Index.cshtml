@model IEnumerable<fmis.Models.Accounting.IndexOfPayment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- CREATE MODAL -->
<div class="modal fade" id="CreateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>

<!--EDIT MODAL-->
<div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>

<!--DELETE MODAL-->
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>

<h3 class="grey lighter smaller">
    Index of Payment
</h3>
<hr>
<div class="form-group form-inline" style="margin-bottom: 10px;">

    <a asp-action="Create" class="btn btn-success btn-sm">
        <i class="ace-icon fa fa-plus "></i>Create New
    </a>
</div>
<br />
<table class="table table-striped" >
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th>
                Dv #
            </th>
            <th>
                Payee
            </th>
            <th>
                Date
            </th>
            <th>
                Particulars
            </th>
            <th>
                PO #
            </th>
            <th>
                Invoice #
            </th>
            <th>
                Project Id
            </th>
            <th>
                # OF BILLING
            </th>
            <th>
                PERIOD COVERED
            </th>
            <th>
                TRAVEL PERIOD
            </th>
            <th>
                SO #
            </th>
            <th>
                ACCOUNT #
            </th>
            <th>
                Action
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dv.DvNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dv.Payee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DvDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Particulars)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectId)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.NumOfBill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodCovered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelPeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNum)
            </td>
            <td>
             @*   <a asp-action="Edit" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#EditModal" asp-route-id="@item.CategoryId">
                    <i class="ace-icon fa fa-edit"></i>
                </a>*@
                <a class="btn btn-xs btn-danger" href="@Url.Action("Delete","IndexOfPayment",new { id = @item.IndexOfPaymentId })" onclick="return confirm('Do you want to delete this Index Of Payment?');">
                    <i class="ace-icon fa fa-trash"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>