
@{
    ViewData["Title"] = "Upload Obligation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="widget-box col-md-2" style="margin-top: 50px; margin-left: 20px;">
    <div class="widget-header">
        <i class="fa fa-upload"></i><h4 class="widget-title"> Upload Obligation </h4>

    </div>
    <br />
    <div class="widget-body">
        <div class="widget-main">

            <div>
                <form asp-action="ImportObligations"
                      enctype="multipart/form-data" onsubmit="AJAXSubmit(this);return false;"
                      method="post">
                    <dl>

                        <dd>
                            <input id="FileUpload_FormFile" type="file"
                                   name="FileUpload.FormFile" />
                        </dd>
                    </dl>

                    <input class="btn btn-success btn-sm" type="submit" value="Upload" />

                    <div style="margin-top:15px">
                        <output name="result"></output>
                    </div>
                </form>
            </div>


        </div>
    </div>
</div>



<script>
    async function AJAXSubmit(oFormElement) {
        var resultElement = oFormElement.elements.namedItem("result");
        const formData = new FormData(oFormElement);

        try {
            // Show Lobibox loading notification
            var loadingNotification = Lobibox.notify('info', {
                msg: 'Uploading Ors...',
                position: 'bottom right',
                delay: false // Prevent automatic dismissal
            });

            const response = await fetch(oFormElement.action, {
                method: 'POST',
                body: formData
            });

            loadingNotification.remove(); // Remove the loading notification

            if (response.ok) {
                // Show Lobibox success notification
                Lobibox.notify('success', {
                    title: 'Success',
                    msg: 'Successfully Uploaded!',
                    position: 'bottom right'
                });

            } else {
                // Show Lobibox danger notification
                Lobibox.notify('error', {
                    title: 'Error',
                    msg: 'Upload ORS failed!',
                    position: 'bottom right'
                });
            }
            // resultElement.value = 'Result: ' + response.status + ' | ' +
            // response.statusText;
            return false;
        } catch (error) {
            console.error('Error:', error);
            return false;
        }
        return false;
    }
</script>
