				console.log("wew");
			}
			else if (CHECK_FIRST_ROW) {
                console.log("else");
                var ajax_data = [];
                $.each(hot.getSourceData(), function () {
                    ajax_data.push(
                        {
                            source_id: this[0] ? fund_sub_data_array[this[0]].source_id : 0,
                            source_type: this[0] ? fund_sub_data_array[this[0]].source_type : 0,
                            Gross: this[1] ? this[1] : "",
                            Date: this[2] ? this[2] : "",
                            Dv: this[3] ? this[3] : "",
                            Pr_no: this[4] ? this[4] : "",
