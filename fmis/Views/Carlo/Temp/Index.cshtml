<h3 class="grey lighter smaller">
    TEMP HANDSONTABLE
</h3>
<hr>
<input type="hidden" class="uacs" value="@ViewBag.uacs">
<div id="example"></div>

<script>
    var uacs = $.parseJSON($(".uacs").val());
    var uacs_data = []
    var uacs_counter = 0;
    var exp_code = "";


    var uacs_data_dropdown = []; //dara
    var uacs_data_array = []; //dara
    $.each(uacs, function () {
        uacs_data_dropdown[this.UacsId] = this.Account_title; //dara
        var json_data = new Object(); //dara
        json_data.UacsId = this.UacsId; //dara
        json_data.Expense_code = this.Expense_code; //dara
        uacs_data_array[this.Account_title] = json_data; //dara
    });

    console.log(uacs_data_array);

    /**
   * The cell type adds supports for displaing the label value except the key in the key-value
   * dropdown editor type.
   */

    const example = document.getElementById('example');
    const hot = new Handsontable(example, {
        data: Handsontable.helper.createSpreadsheetData(2, 0),
        colWidths: [350, 350],
        columns: [
            {
                 type: 'dropdown',
                 source: uacs_data_dropdown
            },
            {
                type: 'dropdown',
                readOnly: true
            },
        ],
        width: 'auto',
        height: 500,
        rowHeights: 23,
        rowHeaders: true,
        colHeaders: ['ACCOUNT TITLE','DROPDOWN', 'EXPENSE CODE', ],
        licenseKey: 'non-commercial-and-evaluation',
        contextMenu: ['row_above', 'row_below', 'remove_row'],
        afterChange(changes) {
            if (!changes) {
                return;
            }
            changes.forEach(([row, col, oldValue, newValue]) => {
                var expense_code = uacs_data_array[hot.getDataAtCell(row, 0)].Expense_code; //dara
                if (expense_code == newValue) //dara
                    return; //dara
                hot.setDataAtCell(row, col + 1, expense_code); //dara
            });
        }
    });
</script>