@model IEnumerable<fmis.Models.Sub_allotment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sub Allotment</h2>
<hr />

<div class="modal fade" id="DeleteModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<p>
    <a class="btn btn-info"><span class="glyphicon glyphicon-plus"></span> Add new Sub-Allotment</a>
</p>
<p>
    <a class="btn btn-warning pull-right"><span class="glyphicon glyphicon-arrow-left"></span> Back</a>

</p>

<style>
</style>
<table class="table">
    <thead>
        <tr>
            <th>
                Sub Allotment Code
            </th>
            <th>
                Sub Allotment Title
            </th>
            <th>Ors Head</th>
            <th>Actions</th>
            <th>Realignment</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Suballotment_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Suballotment_title)
                </td>
                <td>
                    <select class="form-control" aria-label="Default select example">
                        <option selected>Select ORS Head</option>
                        <option value="1">Rusel</option>
                        <option value="2">John</option>
                        <option value="3">Carlo</option>
                        <option value="3">Silver</option>
                        <option value="3">Enerz</option>
                    </select>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit<span class="glyphicon glyphicon-edit"></span></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#DeleteModalCenter">Delete<span class="glyphicon glyphicon-trash"></span></a>

                </td>
                <td>
                    <a href="#" class="btn btn-info"><span class="glyphicon glyphicon-transfer"></span>Funds Realignment</a>
                </td>
            </tr>
        }
    </tbody>
</table>
