@model IEnumerable<fmis.Models.Sub_allotment>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Sub_allotment</h2>
<hr />

<div class="modal fade" id="DeleteModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Add new Sub_allotment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Prexe_code
            </th>
            <th>
                Suballotment_code
            </th>
            <th>
                Suballotment_title
            </th>
            <th>
                ORS Head
            </th>
            <th>
                Responsibility_number
            </th>
            <th>
                Description
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
         {

      <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Prexe_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suballotment_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suballotment_title)
            </td>
            <td>
                <select class="form-control" aria-label="Default select example">
                    <option selected>Select ORS Head</option>
                    <option value="1">Rusel</option>
                    <option value="2">John</option>
                    <option value="3">Carlo</option>
                    <option value="3">Silver</option>
                    <option value="3">Enerz</option>
                </select>
            <td>
                @Html.DisplayFor(modelItem => item.Responsibility_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit<span class="glyphicon glyphicon-edit"></span></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#DeleteModalCenter">Delete<span class="glyphicon glyphicon-trash"></span></a>

            </td>
     </tr>

         }
    </tbody>
</table>















