@model fmis.ViewModel.LoginViewModel

@{
    ViewBag.Title = "User Login";
    var year = (List<Yearly_reference>)ViewData["Year"];
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<style>
    /* IPHONE SE */
    @@media (min-width: 375px) and (max-width: 667px) {
        .signin {
            width: 25%;
            margin-left: -110px;
        }

        .card {
            width: 100px
        }

    }

    /* IPHONE XR */
    @@media (min-width: 414px) and (max-width: 896px) {
        .signin {
            width: 25%;
            margin-left: -100px;
        }
    }


    /* IPAD AIR  */
    @@media (min-width: 820px) and (max-width: 1180px) {
        .signin {
            margin-left: -50px;
        }
    }

    /* IPAD MINI  */
    @@media (min-width: 768px) and (max-width: 1024px) {
        .signin {
            margin-left: -50px;
        }
    }





</style>


<div class="row">
    <div class="col-xs-12 signin">
        <div class="card" id="login" style="width:25rem; height: 35rem; margin-left: 25%; border-width: 2px;">
            <br>
            <center>
                <h6>Sign in to start your session.</h6>
                <img src="~/portfolio_bootstrap/img/about/doh.png" alt="" height="100" width="100">
            </center>
            <div class="card-body ">
                <section>
                    <form id="account" asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group mt-3">
                            <i class="bi bi-person-circle"></i> <label asp-for="Username" style="margin-right:75%;"></label>
                            @*<span asp-validation-for="Username" class="text-danger"></span>*@
                            <input asp-for="Username" class="form-control" />

                        </div>
                        <div class="form-group mt-3">
                            <i class="bi bi-lock-fill"></i> <label asp-for="Password" style="margin-right:77%;"></label>
                            @*<span asp-validation-for="Password" class="text-danger"></span>*@
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <div class="form-group mt-3">
                            <i class="bi bi-calendar-date-fill"></i> <label asp-for="Year" style="margin-right:85%;"></label>
                            <select asp-for="Year" id="year" class="form-control" asp-items='new SelectList(year,"YearlyReferenceId","YearlyReference")'>
                            </select>
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe" style="margin-right:60%;">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                            <br />
                        </div>
                        <br>
                        <div class="form-group">
                            <button type="submit" id="btnsubmit" class="btn btn-success btn-block btn-flat" style="margin-left:70%; font-size:13px;">SIGN IN <i class="bi bi-box-arrow-in-right"></i> </button>
                        </div>
                        @*<div class="text-danger text-sm" asp-validation-summary="All"></div>*@
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

