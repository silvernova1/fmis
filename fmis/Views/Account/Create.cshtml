@model fmis.Models.UserModels.FmisUser

<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>

<button type="button" style="margin-right:15px; margin-top: 10px;" class="close" data-dismiss="modal">×</button>
<center><h3 class="grey lighter smaller">Create New User</h3></center>
<hr />
<div class="container">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @*<input type="hidden" asp-for="Created_at" />*@
            <div class="form-group">
                <h5>Username: </h5>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Password: </h5>
                <input asp-for="Password" value="" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select class="form-control" asp-for="Role" id="dropdown">
                    <option value=""> Select User Role</option>
                    @if (User.FindFirstValue(ClaimTypes.Role) == "budget_admin")
                    {
                        <option value="budget_admin">Budget (Admin)</option>
                        <option value="budget_user">Budget (User)</option>
                    }
                    @if (User.FindFirstValue(ClaimTypes.Role) == "accounting_admin")
                    {
                        <option value="accounting_admin">Accounting (Admin)</option>
                        <option value="accounting_user">Accounting (User)</option>
                    }
                </select>
            </div>
            <div class="form-group pull-right">
                <input type="submit" value="Save" class="btn btn-success btn-xs" /> <a class="btn btn-default btn-xs" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>