@model fmis.Models.Accounting.FundCluster;

<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>

<button type="button" style="margin-right:15px; margin-top: 10px;" class="close" data-dismiss="modal">×</button>
<center><h3 class="grey lighter smaller">Create FundCluster</h3></center>
<hr />
<div class="container">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5>Fund Cluster Description: </h5>
                <input asp-for="FundClusterDescription" id="description" class="form-control" required />
                <span asp-validation-for="FundClusterDescription" class="text-danger"></span>
            </div>
            <div class="form-group pull-right">
                <input type="submit" value="Create" onclick="submiBtnClick()" class="btn btn-success btn-sm" />  <a class="btn btn-sm btn-default" data-dismiss="modal">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
     function submiBtnClick() {
        var fundclusterDescription = document.getElementById("description").value;
         if (fundclusterDescription != '') {
            Lobibox.notify('success', {
                msg: 'Fund Cluster Successfully Added!',
            });
        }
        else {
            return false;
        }
    }
</script>