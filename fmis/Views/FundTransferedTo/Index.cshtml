@model fmis.Models.John.FundSource
@using System.Text.Json;
@using System.Globalization;
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}

<style>
    .wtHider {
        margin-bottom: 150px;
    }
</style>


<input type="hidden" class="uacs_from" value="@JsonSerializer.Serialize(Model.FundSourceAmounts)">
<input type="hidden" class="transferedto" value="@JsonSerializer.Serialize(Model.FundTransferedTo)">
<input type="hidden" class="uacs" value="@JsonSerializer.Serialize(Model.Uacs.Where(s => s.status == "activated"))">
<input type="hidden" id="fundsource_id" value="@Model.FundSourceId" />

<h3 class="grey lighter smaller">
    Fund Source Transfered To
    <small>
        <i class="ace-icon fa fa-angle-double-right"></i>
        @Model.FundSourceTitle
    </small>
</h3>
<hr />
