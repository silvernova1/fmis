@model IEnumerable<fmis.Models.Requesting_office>

@{
    ViewData["Title"] = "Index";
}

<h3 class="grey lighter smaller">
    List of ORS Head Requesting Office / Authorized Representative
</h3>
<hr>
<p>
    <a class="btn btn-success btn-sm" asp-action="Create">
        <i class="ace-icon fa fa-plus "></i>Create New
    </a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th> Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Personal_Information.fname) @Html.DisplayFor(modelItem => item.Personal_Information.mname) @Html.DisplayFor(modelItem => item.Personal_Information.lname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation.Description)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Update</a> |
                    @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>
