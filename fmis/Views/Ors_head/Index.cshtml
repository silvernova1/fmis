@model IEnumerable<fmis.Models.Ors_head>

@{
    ViewData["Title"] = "Index";
}

<h2>ORS HEAD</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Head Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th> Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Personal_Information.fname) @Html.DisplayFor(modelItem => item.Personal_Information.mname) @Html.DisplayFor(modelItem => item.Personal_Information.lname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation.Description)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Update</a> |
                    @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>
