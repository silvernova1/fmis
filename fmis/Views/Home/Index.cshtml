            </h1>
        </div><!-- /.page-header -->
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive">
                            <table id="simple-table" class="table  table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>DIVISION</th>
                                        <th>ALLOTMENT</th>
                                        <th>OBLIGATED</th>
                                        <th>% OF OBLIGATION</th>
                                        <th>UNOBLIGATED BALANCE</th>
                                        <th>DISBURSED</th>
                                        <th>% OF DISBURSEMENT</th>
                                        <th>UNPAID OBLIGATION</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.RespoCenters)
                                    {
                                        var currentYear = User.FindFirstValue("YearlyRef");
                                        var lastYear = (int.Parse(User.FindFirstValue("YearlyRef")) - 1).ToString();

                                        var allotments = Model.FundSources.Where(x => x.RespoId == item.RespoId && x.BudgetAllotment.Yearly_reference.YearlyReference == currentYear && x.AppropriationId == ViewBag.appropriationSourceId && x.AllotmentClassId == ViewBag.allotmentClassId).Sum(x => x.Beginning_balance)
                                                       + Model.Sub_allotments.Where(x => x.RespoId == item.RespoId && x.Budget_allotment.Yearly_reference.YearlyReference == currentYear && x.Date >= ViewBag.date1 && x.Date <= ViewBag.date2 && x.AppropriationId == ViewBag.appropriationSourceId && x.AllotmentClassId == ViewBag.allotmentClassId).Sum(x => x.Beginning_balance)
                                                       + Model.FundSources.Where(x => x.RespoId == item.RespoId && x.BudgetAllotment.Yearly_reference.YearlyReference == lastYear && x.IsAddToNextAllotment == true && x.AppropriationId == ViewBag.appropriationSourceId && x.AllotmentClassId == ViewBag.allotmentClassId).Sum(x => x.Remaining_balance)
                                                       + Model.Sub_allotments.Where(x => x.RespoId == item.RespoId && x.Budget_allotment.Yearly_reference.YearlyReference == lastYear && x.IsAddToNextAllotment == true && x.Date >= ViewBag.date1 && x.Date <= ViewBag.date2 && x.AppropriationId == ViewBag.appropriationSourceId && x.AllotmentClassId == ViewBag.allotmentClassId).Sum(x => x.Remaining_balance);

                                        var obligated = Model.FundSources.Where(x => x.RespoId == item.RespoId && x.BudgetAllotment.Yearly_reference.YearlyReference == currentYear && x.AppropriationId == ViewBag.appropriationSourceId && x.AllotmentClassId == ViewBag.allotmentClassId).Sum(x => x.obligated_amount)
                                                      + Model.Sub_allotments.Where(x => x.RespoId == item.RespoId && x.Budget_allotment.Yearly_reference.YearlyReference == currentYear && x.Date >= ViewBag.date1 && x.Date <= ViewBag.date2 && x.AppropriationId == ViewBag.appropriationSourceId && x.AllotmentClassId == ViewBag.allotmentClassId).Sum(x => x.obligated_amount)
                                                      + Model.FundSources.Where(x => x.RespoId == item.RespoId && x.BudgetAllotment.Yearly_reference.YearlyReference == lastYear && x.IsAddToNextAllotment == true && x.AppropriationId == ViewBag.appropriationSourceId && x.AllotmentClassId == ViewBag.allotmentClassId).Sum(x => x.obligated_amount)
                                                      + Model.Sub_allotments.Where(x => x.RespoId == item.RespoId && x.Budget_allotment.Yearly_reference.YearlyReference == lastYear && x.IsAddToNextAllotment == true && x.Date >= ViewBag.date1 && x.Date <= ViewBag.date2 && x.AppropriationId == ViewBag.appropriationSourceId && x.AllotmentClassId == ViewBag.allotmentClassId).Sum(x => x.obligated_amount);



                                        var unobligated = allotments - (Math.Abs(obligated));

                                        @*var percentage = obligated / allotments * 100;
                                            var positiveValue = Math.Abs(percentage);*@


                                        <tr>
                                            <td> @item.Respo</td>
                                            <td style="text-align:right"> @allotments.ToString("##,#00.00")</td>
                                            <td style="text-align:right"> @Math.Abs(obligated).ToString("##,#00.00") </td>
                                            <td style="text-align:center"> @*@String.Format("{0:0.00}", positiveValue)%*@ </td>
                                            <td style="text-align:right"> @unobligated.ToString("##,#00.00")</td>
                                            <td> 0.00 </td>
                                            <td> 0.00 </td>
                                            <td> 0.00 </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
