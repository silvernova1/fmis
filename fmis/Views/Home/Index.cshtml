<div class="row">
    <form action="@Url.Action("Dashboard","Home")" method="post">
        @Html.AntiForgeryToken()
        <div class="col-xs-12">
            <div class="col-sm-2">
                <div style="display: flex; justify-content: space-between;">
                    <span>Date From: </span>
                    <input type="date" name="date_from" class="form-control" />
                </div>
            </div>
            <div class="col-sm-2">
