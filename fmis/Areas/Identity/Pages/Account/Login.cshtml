<div class="row">
    <div class="col-md-12">
        <div class="card " id="login" style="width:25rem; height: 35rem; margin-left: 25%; border-width: 2px;">
            <br>
            <center>
                <h6>Sign in to start your session.</h6>
                <img src="~/portfolio_bootstrap/img/about/doh.png" alt="" height="100" width="100">
            </center>
            <div class="card-body">
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group mt-3">
                            <i class="bi bi-person-circle"></i> <label asp-for="Input.Username" style="margin-right:75%;"></label>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                            <input asp-for="Input.Username" class="form-control" />

                        </div>
                        <div class="form-group mt-3">
                            <i class="bi bi-lock-fill"></i> <label asp-for="Input.Password" style="margin-right:77%;"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <input asp-for="Input.Password" class="form-control" />
                        </div>
                        <div class="form-group mt-3">
                            <i class="bi bi-calendar-date-fill"></i> <label asp-for="Input.Year" style="margin-right:85%;"></label>
                            <select asp-for="Input.Year" id="year" class="form-control" asp-items='new SelectList(year,"YearlyReferenceId","YearlyReference")'>
                            </select>
                            <span asp-validation-for="Input.Year" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" style="margin-right:60%;">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <br />
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </div>
                        <br>
                        <div class="form-group">
                            <button type="submit" id="btnsubmit" class="btn btn-success btn-block btn-flat" style="margin-left:70%; font-size:13px;">SIGN IN <i class="bi bi-box-arrow-in-right"></i> </button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
$('#btnsubmit').click(function(){

    var yearid = $('#year option:selected').val()
    
    $.ajax({
        type:'GET',
        data: { id: yearid},
        dataType: "json",
        url: '@Url.Action("Dashboard", "Home")',
        success: function (result){
        }
    });
})
</script>